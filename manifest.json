{
  "name": "Calimoto Enhancer",
  "version": "1.0.2",
  "description": "Upgrade the Calimoto Tour Planner web experience by adding new features",
  "author": "Jack NUMBER",
  "manifest_version": 2,
  "applications": {
    "gecko": {
        "id": "calimoto@jacknumber.fr",
        "strict_min_version": "57.0"
    }
},
  "icons": {
    "512": "src/images/icon512.png"
  },
  "browser_action": {
    "default_icon": {
      "32": "src/images/icon32.png"
    },
    "default_popup": "src/options/options.html"
  },
  "permissions": [
    "storage",
    "https://calimoto.com/*"
  ],
  "content_scripts": [{
    "matches": [
      "https://calimoto.com/*"
    ],
    "js": [
      "src/main.js",
      "src/scripts/custom_css.js",
      "src/scripts/waypoints.js",
      "src/injector.js"
    ]
  }],
  "web_accessible_resources": [
    "src/inject_console_listener.js"
  ]
}
