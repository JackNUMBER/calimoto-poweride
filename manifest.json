{
  "name": "Calimoto Enhancer",
  "version": "0.1.0",
  "description": "Add some welcome changes to Calimoto web Trip Planner",
  "author": "Jack NUMBER",
  "manifest_version": 2,
  "icons": {
    "512": "src/images/icon512.png"
  },
  "page_action": {
    "default_icon": {
      "32": "src/images/icon32.png"
    },
    "default_popup": "src/options/options.html"
  },
  "options_ui": {
    "page": "src/options/options.html",
    "open_in_tab": false
  },
  "permissions": [
    // "tab",
    "storage",
    "https://calimoto.com/*"
  ],
  "content_scripts": [{
    "matches": [
      "https://calimoto.com/*"
    ],
    "js": [
      "src/main.js",
      "src/injector.js",
      "src/custom_css.js"
    ]
  }],
  "web_accessible_resources": [
  ]
}
